<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SS_Application" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
    <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textColor">@color/color_background</item>
    </style>
    <style name="Header">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BodyText" parent="TextView">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Header.Subheading" parent="TextView">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Header.Heading_2" parent="TextView">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Header.Heading_1" parent="TextView">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Button" parent="TextView">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="spinner_style">
        <item name="android:showDividers">none</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:dropDownSelector">@android:color/white</item>
        <item name="android:popupBackground">@color/purple</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">24sp</item>
    </style>
</resources>